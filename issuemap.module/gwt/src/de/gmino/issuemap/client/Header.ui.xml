<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />
	
	
	<ui:style>
		.header {
			font-size: 90%;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			border-bottom: 3px solid #4DADDE;
			background: #333;
			z-index: 5;
			min-height: 35px;
			padding-left: 10px;
			padding-top: 5px;

		}
		
		.title {
			font-size: 1.7em;
			margin-top: 5px;
			text-align: center;
		}
		
		.searchButton {
			margin-top: 10px;
			margin-left: 3px;
			display: block;
			font-size: 16pt;
			border-left: 1px solid #4C4C4C;
    		border-right: 1px solid #000000;
    		border-top: 1px solid #4C4C4C;
    		border-bottom: 1px solid #000000;
		}
		
		.button {
			text-align: center;
			font-variant: small-caps;
			color: #4DADDE;
			min-height: 15px;
			border: 0px;
			padding-left: 20px;
			padding-bottom: 12px;
			background: #333;
			cursor: pointer;
		}
		
		.searchField {
			margin-top: 15px;
		}
	</ui:style>

	<g:HorizontalPanel styleName="{style.header}" width="100%"
		ui:field="header">

		<g:cell width="25%" verticalAlignment="ALIGN_BOTTOM">
			<g:Image ui:field="logo" url="loading.gif" height="45px" />
		</g:cell>

		<g:cell width="48%">
			<g:Label styleName="{style.title}" ui:field="title" />
		</g:cell>

		<g:cell width="2%" horizontalAlignment="ALIGN_LEFT">
			<g:PushButton styleName="{style.searchButton}"  ui:field="info_button" height="30px">
   				<g:upFace image='{resources.info}'/>
  				<g:upHoveringFace image='{resources.info_hover}'/>
			</g:PushButton>
		</g:cell>

		<g:cell width="20%" horizontalAlignment="ALIGN_RIGHT">
			<g:TextBox styleName="{style.searchField}" text="Suchbegriff" />
		</g:cell>

		<g:cell width="30px">
			<g:PushButton styleName="{style.searchButton}"  ui:field="search_button" height="30px">
   				<g:upFace image='{resources.search}'/>
  				<g:upHoveringFace image='{resources.search_hover}'/>
			</g:PushButton>
		</g:cell>
		<g:cell> <g:Label></g:Label></g:cell>


	</g:HorizontalPanel>
</ui:UiBinder> 