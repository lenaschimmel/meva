<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.body {
			width: 400px;
			background-color: #FFF;
			position: absolute;
			top: 0px;
			left: 0px;
			border-right: 2px solid #4C4C4C;
			border-bottom: 2px solid #4C4C4C;
    		border-left: 2px solid #000000;
    		border-top: 2px solid #000000;
			padding: 10px;
		}
		
		.title_label {
			color: #333;
			margin-top: 5px;
			text-align: center;
			font-weight:bold;
			margin-bottom: 4px;
			white-space: nowrap;
			width: auto;
		}
		
		.description_label {
			color: #333;
			margin-bottom: 10px;
			margin-top: 5px;

		}
	</ui:style>
	<g:HTMLPanel styleName="{style.body}" ui:field="body">
		<g:Label ui:field="title" styleName="{style.title_label}"></g:Label>
		<g:Label ui:field="description" styleName="{style.description_label}"></g:Label>
		<g:Button ui:field="close" text="close"></g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 