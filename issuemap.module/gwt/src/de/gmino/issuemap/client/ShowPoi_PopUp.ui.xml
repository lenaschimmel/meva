<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
		<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />
	
	
	<ui:style>
		.div {
			background-color: #333;
			border-width: 3px;
			border-color: #FFF;
			border-radius: 10px;
			/* Override glass panel to 10% opacity (= 90% transparency) */
			filter: alpha(opacity =   1) !important; /* IE */
			opacity: 0.9 !important; /* non-IE */
			margin:3px;
		}
		
		.innerIcon {
			position: absolute;
			bottom: 0px;
			left: 6px;
		}
		
		.title_lable {
			color: #FFF;
			margin-top: 10px;
			font-weight: bold;
			text-align: center;
		}
		
		.description_lable {
			color: #FFF;
			margin-bottom: 10px;
			margin-left: 10px;
			margin-top: 5px;
		}

		
		.picture {
			padding: 10px;
		}
	</ui:style>

			<g:VerticalPanel ui:field="expanded_marker" styleName="{style.div}"
		width="160px" height="100px">
				<g:Label styleName="{style.title_lable}" text="Schlagloch" />
				<g:Label styleName="{style.description_lable}"
					text="Hier kÃ¶nnte Ihr individueller Markertext stehen." />
				<g:Image styleName="{style.innerIcon}" pixelSize="32,37"
					url="http://gmino.de/static/img/mapicons_orange_new/pin_export.png" />
			</g:VerticalPanel>
			


</ui:UiBinder> 