<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.parent {
		width: 300px;
		background:  rgba(20, 20, 20, 0.8);
		position: absolute;
		left: -29px;
		top: -47px;
		border-top-right-radius: 4px;
		border-bottom-right-radius: 4px;
		border-top-left-radius: 4px;
		border-bottom-left-radius: 4px;
		border: 1px solid #ccc;
		padding: 10px;
		color: #fff;
		}
		
		.content {
			width: 420px;
		}
		
		.description {
			height: 200px;
		}
		
		.title_label {
			color: #FFF;
			text-align: center;
			font-weight: bold;
			font-size: large;
			padding-bottom: 15px;
			white-space: nowrap;
			width: auto;
			border-top-right-radius: 10px;
			border-top-left-radius: 10px;
		}
		
			.closeButton {
		position: absolute;
		top: -10px;
		right: -10px;
		cursor: pointer;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label styleName="{style.title_label}" ui:field="headLable">Marker bearbeiten</g:Label>
		<g:Image resource="{resources.close}" ui:field="close" styleName="{style.closeButton}"></g:Image>
		<g:VerticalPanel styleName="{style.content}">
		    <g:cell>
		        <g:HorizontalPanel width="100%">
		    		<g:cell width="40px">
						<g:Image ui:field="imageMarkerIcon"/>
					</g:cell>
					<g:cell>
						<g:TextBox text="Titel" width="90%" ui:field="title"></g:TextBox>
					</g:cell>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell>
				<g:TextArea text="Beschreibung..." width="90%" ui:field="description" styleName="{style.description}"></g:TextArea>
			</g:cell>

			
			<g:cell>
				<g:ListBox ui:field="typebox">
				</g:ListBox>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="button" text="Eintragen" />
			</g:cell>
		</g:VerticalPanel>
	</g:VerticalPanel>

</ui:UiBinder> 