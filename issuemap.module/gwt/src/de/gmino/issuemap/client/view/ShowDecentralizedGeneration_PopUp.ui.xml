<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.important {
		font-weight: bold;
		}

		.parent {
		background-color:
		rgba(20,20,20,0.75);
		position: absolute;
		left: -29px;
		top: -47px;

		border-top-right-radius: 10px;
		border-bottom-right-radius: 10px;
		border-top-left-radius: 10px;
		border-bottom-left-radius: 10px;
		border:
		3px solid;
		padding: 10px;
		color: #fff;
		}

		.title_label {
		color: #FFF;
		font-weight: bold;
		font-size: large;
		white-space: nowrap;
		width: auto;
		}

		.divider {
		font-weight: bold;
		}

		.description_label {
		margin-top: 10px;
		margin-bottom: 10px;
		padding-right: 10px;
		}

		.meta_label_bold {
		font-weight: bold;
		padding-bottom: 3px;
		}

		.meta_label {
		padding-bottom:
		3px;
		margin-left: 10px;
		text-align: right;
		margin-right: 15px;
		}

		.closeButton {
		position: absolute;
		bottom: 0px;
		right: 0px;
		cursor:
		pointer;
		}

		.rateButton {
		padding-right: 10px;
		cursor: pointer;
		}

		.countRatingLabel {
		padding-left: 13px;
		}

		.footer {
		margin-top: 5px;
		}

		.topCell {
		cursor:pointer;
		}

		.topCell:hover {
		background:#444;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Cell><!-- Kopfbereich a.k.a. Mouseover -->
			<g:HorizontalPanel width="100%">
				<g:cell width="40px">
					<g:Image ui:field="imageMarkerIcon">

					</g:Image>
				</g:cell>
				<g:cell>
					<g:VerticalPanel>
						<g:Label ui:field="labelTitle" styleName="{style.title_label}"></g:Label>
						<g:HorizontalPanel>
							<g:Label ui:field="type">Umspannwerk</g:Label>
							<g:Image resource="{resources.close}" ui:field="close"
								styleName="{style.closeButton}"></g:Image>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell><!-- Mittelteile mit Tabinhalten -->
			<g:DeckPanel ui:field="deckPanel">
				<g:ScrollPanel ui:field="tabDescription" width="400px"
					height="130px"><!-- Description -->
					<g:VerticalPanel>
						<g:HorizontalPanel ui:field="adressPanel">
							<g:Label width="120px" styleName="{style.meta_label_bold}">Adresse: </g:Label>
							<g:Label ui:field="adress"></g:Label>
						</g:HorizontalPanel>
						<g:HorizontalPanel ui:field="powerPanel">
							<g:Label width="120px" styleName="{style.meta_label_bold}">Leistung: </g:Label>
							<g:Label ui:field="power"></g:Label>
						</g:HorizontalPanel>
						<g:HTML ui:field="description" styleName="{style.description_label}"></g:HTML>
					</g:VerticalPanel>
				</g:ScrollPanel>

			</g:DeckPanel>
		</g:Cell>

	</g:VerticalPanel>
</ui:UiBinder> 