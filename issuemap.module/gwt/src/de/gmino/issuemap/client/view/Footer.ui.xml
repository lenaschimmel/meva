<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.button {
			border-left: 1px solid #4C4C4C;
			border-right: 1px solid #000000;
			cursor: pointer;
		}
		
		.info_box {
			border-left: 1px solid #4C4C4C;
			border-right: 1px solid #000000;
			float: left;
			cursor:pointer;
		}
		
		.info_box:hover {

			background: rgba(200,200,200,0.2);

		}
		
		.footer {
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			z-index: 5;
			background: rgba(0, 0, 0, 0.8);
			min-width: 730px;
			border-top: 1px solid rgba(0, 0, 0, 0.5);
		    -webkit-box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
			box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);

		}
		
		.gmino_logo {
			cursor: pointer;
			margin-top: 8px;
		}
		
		.counter_icon {
			margin-top: 8px;
			margin-left: 10px;			
		}
		
		.footText {
			color: #FFFFFF;
			margin-top: 7px;
			margin-left: 5px;
			float: right;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.footer}" width="100%"
		ui:field="footer">
	<g:cell horizontalAlignment="ALIGN_LEFT">
		<g:FlowPanel width="100%">



			<g:FocusPanel width="180px" styleName="{style.info_box}"
				visible="false" ui:field="counterPanel">
				<g:HorizontalPanel>
					<g:Image styleName="{style.counter_icon}" ui:field="counter_icon"
						url="loading.gif" visible="false" />
					<g:Label styleName="{style.footText}" ui:field="counter"></g:Label>
				</g:HorizontalPanel>
			</g:FocusPanel>

			<g:FocusPanel width="180px" styleName="{style.info_box}"
				visible="false" ui:field="resolvedCounterPanel">
				<g:HorizontalPanel>

					<g:Image styleName="{style.counter_icon}" ui:field="resolvedCounter_icon"
						url="loading.gif" visible="false" />
					<g:Label styleName="{style.footText}" ui:field="resolvedCounter"></g:Label>
				</g:HorizontalPanel>
			</g:FocusPanel>

			<g:FocusPanel width="290px" styleName="{style.info_box}"
				visible="false" ui:field="doubleClickInfoPanel">
				<g:HorizontalPanel>

					<g:Image styleName="{style.counter_icon}" ui:field="cursor"
						url="cursor_white.png" visible="false" />
					<g:Label styleName="{style.footText}" ui:field="text">Mit einem
						Doppelklick in die Karte k√∂nnen Sie einen neuen Eintrag erstellen</g:Label>
				</g:HorizontalPanel>
			</g:FocusPanel>
		</g:FlowPanel>
	</g:cell>

		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:Image styleName="{style.gmino_logo}" url="logo_geoengine.png"
				ui:field="gmino_logo" title="powerd by greenmobile Innovations"/>
		</g:cell>

	</g:HorizontalPanel>
</ui:UiBinder> 