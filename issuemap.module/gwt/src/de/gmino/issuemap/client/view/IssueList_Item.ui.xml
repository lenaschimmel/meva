<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />


	<ui:style>
	
			.parent {
			padding-left: 10px;
			padding-bottom: 5px;
			padding-top: 5px;
			padding-right: 5px;
			color: #fff;
			cursor: pointer;
		}
		
					.focusPanel:hover {

			background: #444;

		}
		
		.title_label {
			color: #FFF;
			font-weight: bold;
			font-size: medium;
			 overflow: hidden;
			 text-overflow: ellipsis;
			 white-space: nowrap;
			 width: 15em;
		}
		
		.rating{
			font-size: large;
			margin: 8px;
			font-weight: bolder;
			text-align: right;
		}
	</ui:style>
	<g:FocusPanel ui:field="focusPanel" styleName="{style.focusPanel}">
		<g:HorizontalPanel styleName="{style.parent}">
			<g:cell width="40px">
				<g:Image ui:field="imageMarkerIcon">
	
				</g:Image>
			</g:cell>
			<g:cell>
				<g:VerticalPanel>
					<g:Label ui:field="labelTitle" styleName="{style.title_label}"></g:Label>
					<g:HorizontalPanel>
						<g:Label ui:field="type"></g:Label>
						<g:Label ui:field="date"></g:Label>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="100%"><g:Label ui:field="rating" styleName="{style.rating}"></g:Label></g:cell>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 