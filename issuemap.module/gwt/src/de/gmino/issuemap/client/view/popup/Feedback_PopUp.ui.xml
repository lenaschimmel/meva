<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.parent {
			width: 322px;
			height: 356px;
			background: rgba(0, 0, 0, 0.8);
			position: absolute;
			top: -182px;
			left: -0px;
			border-top-right-radius: 4px;
			border-bottom-right-radius: 4px;
		}
		
		.content {
			padding: 10px;
		}
		
		.title_label {
			color: #FFF;
			text-align: center;
			font-weight: bold;
			font-size: larger;
			padding: 10px;
			white-space: nowrap;
			width: auto;
		}
		
		.divider {
			color: #FFF;
			text-align: center;
		}
		
		.text_area {
			width: 290px;
			height: 206px;
			margin-left: 8px;
			margin-bottom: 5px;
			border: 1px solid #111111;
			border-radius: 2px 3px 3px 2px;
			box-shadow: 0 1px 0 0 #242424, 0 1px 0 0 #B1B1B1 inset;
			display: block;
			resize: none;
			padding: 5px;
			font-family: inherit;
			font-size: inherit;
		}
		
		.sendButton {
			margin-left: 241px;
			margin-bottom: 10px;
			height: 30px;
		}
		
		.listbox {
			margin-left: 8px;
			margin-bottom: 5px;
			width: 300px;
		}
		
		.mail_field {
			margin-left: 8px;
			margin-bottom: 5px;
			width: 295px;
			border: 1px solid #111111;
			border-radius: 2px 3px 3px 2px;
			box-shadow: 0 1px 0 0 #242424, 0 1px 0 0 #B1B1B1 inset;
			display: block;
			height: 25px;
			padding-left: 5px;
		}
		
		.closeButton {
			position: absolute;
			top: 150px;
			right: -13px;
			cursor: pointer;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label ui:field="title" styleName="{style.title_label}">Geben Sie uns Feedback</g:Label>
		<g:Image resource="{resources.feedback_close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
		<g:ListBox styleName="{style.listbox}" ui:field="typebox">
			<g:item value='0'>
				Feedback an die Entwickler (Fehler, etc.)
			</g:item>
			<g:item value='1'>
				Feedback an die Partei
			</g:item>
		</g:ListBox>
		<g:TextArea styleName="{style.text_area}" ui:field="message"></g:TextArea>
		<g:TextBox styleName="{style.mail_field}" ui:field="email"></g:TextBox>
		<g:Button ui:field="sendButton" styleName="{style.sendButton}">Senden</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 