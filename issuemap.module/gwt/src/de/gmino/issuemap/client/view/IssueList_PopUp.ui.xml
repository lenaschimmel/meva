<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.parent {
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;

		}
		
		.flowPanel{
			background: rgba(0, 0, 0, 0.75);
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;
			    min-height: 250px; 
}

		
		.title_label {
			color: #FFF;
			text-align: center;
			font-weight: bold;
			font-size: larger;
			padding: 10px;
			white-space: nowrap;
			width: auto;
		}
		
		.divider {
			color: #FFF;
			text-align: center;
		}

		
		.closeButton {
			position: absolute;
			top: 45%;
			left: -13px;
			cursor: pointer;
		}
		
		.scrollPanel{
			    bottom: 0;
			    left:0px;
    overflow: auto;
    position: absolute;
    right: 0;
    top: 40px;

			
}
		
	</ui:style>
	<g:FlowPanel width="100%" height="100%" styleName="{style.flowPanel}" ui:field="flowPanel">
			<g:Image resource="{resources.list_close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
				<g:Label ui:field="title" styleName="{style.title_label}">Relevanz-Liste</g:Label>
	<g:SimplePanel styleName="{style.scrollPanel}">
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">


			
				<g:VerticalPanel ui:field="IssueItemsPanel" height="100%"></g:VerticalPanel>
			
	</g:VerticalPanel>
	</g:SimplePanel>
	</g:FlowPanel>
</ui:UiBinder> 