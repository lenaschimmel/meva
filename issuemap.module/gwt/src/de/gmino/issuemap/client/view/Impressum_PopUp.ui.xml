<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.parent {
		width: 400px;
		background-color: #333;
		position: absolute;
		top: -50%;
		left: -200px;
		/* Override glass panel to 10% opacity (= 90% transparency) */
		filter: alpha(opacity = 1) !important; /* IE */
		opacity: 0.9 !important; /* non-IE */
		border-top-right-radius: 10px;
		border-bottom-right-radius: 10px;
		border-top-left-radius: 10px;
		border-bottom-left-radius: 10px;
		}

		.content {
		padding: 10px;
		}

		.title_label {
		color: #FFF;
		text-align: center;
		font-weight: bold;
		font-size: larger;
		padding: 10px;
		white-space: nowrap;
		width: auto;
		border-top-right-radius: 10px;
		border-top-left-radius: 10px;
		}

		.divider {
		color: #FFF;
		text-align: center;
		}

		.info_label {
		color: #FFF;
		margin-bottom: 10px;
		padding-right: 10px;
		}

		.closeButton {
		position: absolute;
		top: -10px;
		right: -10px;
		cursor: pointer;
		}
		
		.impressum{
		cursor: pointer;
		margin-top: 10px;
		color: #FFF;
		text-decoration: underline;
		width: 95%;
		text-align: right;
		}
		
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label ui:field="title" styleName="{style.title_label}">Impressum</g:Label>
		<g:Image resource="{resources.close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
		<g:VerticalPanel styleName="{style.content}">
			<g:Label>Anschrift</g:Label>
			<g:Label ui:field="full_name"></g:Label>
			<g:Label ui:field="street"></g:Label>
			<g:Label ui:field="town"></g:Label>
			<g:Label ui:field="email"></g:Label>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 