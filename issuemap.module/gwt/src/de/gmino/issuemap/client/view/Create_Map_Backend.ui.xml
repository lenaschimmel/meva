<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label{
			width: 160px;
			margin: 1px;
		}
		.textBox{
			position: absolute;
			left: 200px;
			height: 19px;
			width: 500px;
		}
		
		.textArea{
			position: absolute;
			left: 200px;
			height: 200px;
			width: 500px;
			font-family: inherit;
			font-size: inherit;
		}
		
		.textBox12{
			position: absolute;
			left: 200px;
			width: 245px;
			height: 19px;
			}
			
		.textBox22{
			position: absolute;
			left: 455px;
			width: 245px;
			height: 19px;
			}
			
		.textBox14{
			position: absolute;
			left: 200px;
			width: 120px;
			height: 19px;
			}
			
		.textBox24{
			position: absolute;
			left: 330px;
			width: 120px;
			height: 19px;
			}
			
		.textBox34{
			position: absolute;
			left: 460px;
			width: 120px;
			height: 19px;
			}
			
		.textBox44{
			position: absolute;
			left: 590px;
			width: 110px;
			height: 19px;
			}
			
		.textBox13{
			position: absolute;
			left: 200px;
			width: 160px;
			height: 19px;
			}
			
		.textBox123{
			position: absolute;
			left: 200px;
			width: 330px;
			height: 19px;
			}
			
		.textBox23{
			position: absolute;
			left: 370px;
			width: 160px;
			height: 19px;
			}
		
		.textBox33{
			position: absolute;
			left: 540px;
			width: 160px;
			height: 19px;
			}
			

		
		.parent{
			padding: 15px;
			border-top-right-radius: 4px;
			border-bottom-right-radius: 4px;
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;
			border: 1px solid #ccc;
			background: rgba(60, 60, 60, 0.8);
			
			position: relative;
			margin: auto;
			color: #FFF;
			overflow: auto;
			width: 710px;
			height: 95%;
			
		}
		

		.h1{
			font-size: x-large;
			text-align: center;
			margin-bottom: 20px;
			width: 100%;
		}
		.h2{
			font-size: large;
			margin-top:20px;
			margin-bottom: 10px;
			width: 100%;
			clear: both;
		}

		.markerPanel{
			margin-top: 20px;
			}
		.typeselect{
			width: 500px;
			position: absolute;
			left: 200px;
			margin-left: 10px;
			height: 25px;
			margin: 2px;
		}
		
		.checkBox{
			padding-top: 10px;

	
		}
		.checkBoxlabel{
			width: 142px;
			margin: 2px;
			
		}
		.checkBoxExtension{
			width: 350px;
			height: 25px;
			margin-left: 5px;
			}
			
		.primarycolor{
			background:  #FFF url('white.png') no-repeat left;
			position: absolute;
			left: 200px;
			width: 118px;
			height: 19px;
			}
		
		.secondarycolor{
			background:  #FFF url('white.png') no-repeat left;
			position: absolute;
			left: 328px;
			width: 118px;
			height: 19px;
			}
			
		.backgroundcolor{
			background:  #FFF url('white.png') no-repeat left;
			position: absolute;
			left: 456px;
			width: 118px;
			height: 19px;
			}
			
		.resolvedcolor{
			background:  #FFF url('white.png') no-repeat left;
			position: absolute;
			left: 584px;
			width: 116px;
			height: 19px;
			}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.parent}">
	<g:VerticalPanel width="100%" >
	<g:Label styleName="{style.h1}" ui:field="heading">Neue Map erstellen</g:Label>

		
		<g:Label styleName="{style.h2}">Metadaten</g:Label>
		<g:HorizontalPanel height="28px"><g:Label text="Texte:" styleName="{style.label}"/><g:TextBox styleName="{style.textBox123}" ui:field="title"/><g:TextBox styleName="{style.textBox33}" ui:field="subdomain"/></g:HorizontalPanel>
		<g:HorizontalPanel height="210px"><g:TextArea styleName="{style.textArea}" ui:field="infoText"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="Logo-URL:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="logo_url"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:Label text="Farben:" styleName="{style.label}"/><g:TextBox styleName="{style.primarycolor}" ui:field="primary_color"/>
		<g:TextBox styleName="{style.secondarycolor}" ui:field="secondary_color"/>
		<g:TextBox styleName="{style.backgroundcolor}" ui:field="background_color"/>
		<g:TextBox styleName="{style.resolvedcolor}" ui:field="resolved_color"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="Start Position:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox13}" ui:field="initLocation_latitude"/><g:TextBox styleName="{style.textBox23}" ui:field="initLocation_longitude"/><g:TextBox styleName="{style.textBox33}" ui:field="initZoomlevel"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="Website, Impressum:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox12}" ui:field="website"/><g:TextBox styleName="{style.textBox22}" ui:field="url_impressum"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="Kontakt (Name, Mail):" styleName="{style.label}" /><g:TextBox styleName="{style.textBox12}" ui:field="recipient_name"/><g:TextBox styleName="{style.textBox22}" ui:field="email"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="Adresszusatz:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="additionalAddressLine"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="Straße, Hausnummer:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox12}" ui:field="street"/><g:TextBox styleName="{style.textBox22}" ui:field="houseNumber"/></g:HorizontalPanel>
		<g:HorizontalPanel height="28px"><g:InlineLabel text="PLZ, Stadt:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox12}" ui:field="zip"/><g:TextBox styleName="{style.textBox22}" ui:field="city"/></g:HorizontalPanel>
		
		<g:Label styleName="{style.h2}">Marker-Klasse</g:Label>
		<g:HorizontalPanel height="32px"><g:Label text="Klasse:" styleName="{style.label}" />
			<g:ListBox styleName="{style.typeselect}" ui:field="mapType">
				<g:item value='0'>Issues</g:item>
				<g:item value='1'>Veranstaltungen</g:item>
				<g:item value='2'>Dezentrale Energieerzeuger</g:item>
				<g:item value='2'>keine</g:item>
			</g:ListBox>
		</g:HorizontalPanel>
		<g:FlowPanel>
			<g:ListBox styleName="{style.label}" ui:field="type1">
				<g:item value='0'>Text kurz</g:item>
				<g:item value='1'>Text lang</g:item>
				<g:item value='2'>Integer</g:item>
				<g:item value='2'>Float</g:item>
				<g:item value='2'>Datum</g:item>
			</g:ListBox>
			<g:TextBox text="Wert 1" styleName="{style.textBox}" ui:field="value1"></g:TextBox>
		</g:FlowPanel>
				<g:FlowPanel>
			<g:ListBox styleName="{style.label}" ui:field="type2">
				<g:item value='0'>Text kurz</g:item>
				<g:item value='1'>Text lang</g:item>
				<g:item value='2'>Integer</g:item>
				<g:item value='2'>Float</g:item>
				<g:item value='2'>Datum</g:item>
			</g:ListBox>
			<g:TextBox text="Wert 2" styleName="{style.textBox}" ui:field="value2"></g:TextBox>
		</g:FlowPanel>
				<g:FlowPanel>
			<g:ListBox styleName="{style.label}" ui:field="type3">
				<g:item value='0'>Text kurz</g:item>
				<g:item value='1'>Text lang</g:item>
				<g:item value='2'>Integer</g:item>
				<g:item value='2'>Float</g:item>
				<g:item value='2'>Datum</g:item>
			</g:ListBox>
			<g:TextBox text="Wert 3" styleName="{style.textBox}" ui:field="value3"></g:TextBox>
		</g:FlowPanel>
		<g:Label styleName="{style.h2}">Marker-Auswahl</g:Label>
		
		
		<g:FlowPanel width="100%"><g:FlowPanel width="100%" styleName="{style.markerPanel}" ui:field="markerPanel"></g:FlowPanel></g:FlowPanel>
		<g:FlowPanel width="100%" styleName="{style.markerPanel}" ui:field="eePanel"></g:FlowPanel>
		<g:Label styleName="{style.h2}">Imports</g:Label>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="gpxImportCheckbox"/><g:Label text="GPX-Datein" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="gpxFiles"/></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="mapsImportCheckbox"/><g:Label text="Maps" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="mapIds"/></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="markerImportCheckbox"/><g:Label text="Marker" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="markerIds"/></g:HorizontalPanel>
		<g:Label styleName="{style.h2}">Features</g:Label>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="fotosCheckbox"/><g:Label text="Fotos" styleName="{style.label}"/></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="commentsCheckbox"/><g:Label text="Kommentare" styleName="{style.label}" /></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="editCheckbox" /><g:Label text="Editieren erlauben" styleName="{style.label}" />
		<g:CheckBox ui:field="deleteCheckbox" visible="false" /><g:Label text="Löschen erlauben" ui:field="deleteLabel" visible="false" styleName="{style.label}" /></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="markCheckbox"/><g:Label text="Marker Markieren" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="markDescription"/></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="ratingsCheckbox"/><g:Label text="Bewertungen" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="rateCriteria"/></g:HorizontalPanel>
		<g:HorizontalPanel height="32px"><g:CheckBox ui:field="listCheckbox"/><g:Label text="Listenansicht" styleName="{style.label}" /><g:ListBox height="24px" styleName="{style.textBox}" ui:field="sortCriteria"></g:ListBox></g:HorizontalPanel>
		<g:HorizontalPanel height="32px" visible="false"><g:CheckBox ui:field="filtersCheckbox"/><g:Label text="Filter" styleName="{style.label}"/><g:ListBox height="24px" styleName="{style.textBox}" ui:field="filterCriteria"/></g:HorizontalPanel>
		<g:Button styleName="{style.important}" ui:field="button" text="Speichern"/>
	</g:VerticalPanel>

	</g:HTMLPanel>
</ui:UiBinder> 