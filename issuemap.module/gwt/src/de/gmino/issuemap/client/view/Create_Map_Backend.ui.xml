<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label{
			display: block;
			float: left;
			width: 200px;
		}
		.textBox{
			width: 70%;
}
		
		.parent{
			background: rgba(200,200,200, 1);
			color: #000;
			padding: 10px;
			border-top-right-radius: 4px;
			border-bottom-right-radius: 4px;
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;
			border: 1px solid #ccc;
			overflow: hidden;
			
		}
		
		.heading{
			font-size: x-large;
			text-align: center;
			margin-bottom: 20px;
		}

		.markerPanel{
			margin-top: 20px;
			}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.parent}">
		<g:Label styleName="{style.heading}" ui:field="heading">Neue Map erstellen</g:Label>
		<g:FlowPanel><g:InlineLabel text="Titel:" styleName="{style.label}"/><g:TextBox styleName="{style.textBox}" ui:field="title"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Subdomain:" styleName="{style.label}"/><g:TextBox styleName="{style.textBox}" ui:field="subdomain"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Info-Text:" styleName="{style.label}"/><g:TextBox styleName="{style.textBox}" ui:field="infoText"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Marker-Farbe:" styleName="{style.label}"/><g:TextBox styleName="{style.textBox}" ui:field="primary_color"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Text-Farbe:" styleName="{style.label}"/><g:TextBox styleName="{style.textBox}" ui:field="secondary_color"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Hintergrund-Farbe:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="background_color"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Erledigt-Farbe:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="resolved_color"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Stadt:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="city"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Initiale Latitude:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="initLocation_latitude"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Initiale Longitude:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="initLocation_longitude"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Initialer Zoom:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="initZoomlevel"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="URL zum Logo" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="logo_url"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Website:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="website"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="E-Mail:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="email"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Impressums URL:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="url_impressum"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Name des Betreibers:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="recipient_name"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Adresszusatz:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="additionalAddressLine"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="StraÃŸe:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="street"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Hausnummer:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="houseNumber"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="PLZ:" styleName="{style.label}" /><g:TextBox styleName="{style.textBox}" ui:field="zip"/></g:FlowPanel>
		<g:FlowPanel><g:InlineLabel text="Map-Typ:" styleName="{style.label}" />
			<g:ListBox styleName="{style.textBox}" ui:field="mapType">
				<g:item value='0'>Issue-Map</g:item>
				<g:item value='1'>Event-Map</g:item>
				<g:item value='2'>EE-Map</g:item>
			</g:ListBox>
		</g:FlowPanel>
		<g:Button styleName="{style.important}" ui:field="button" text="Speichern"/>
		<g:FlowPanel width="100%" styleName="{style.markerPanel}" ui:field="markerPanel"></g:FlowPanel>
		<g:FlowPanel width="100%" styleName="{style.markerPanel}" ui:field="eePanel"></g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 