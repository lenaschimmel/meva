<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.parent {
		border-bottom: 2px solid #ddd;
		width: 100%;

			
		}
		
		.labelSubdomain {
			cursor: pointer;
			text-decoration: underline;
		}
		
		.button{
			cursor: pointer;
			margin: 5px;
			
			
}
		
		
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel styleName="{style.parent}"
			ui:field="parent" >
			<g:cell verticalAlignment="ALIGN_MIDDLE" width="6%" ><g:Label ui:field="id"></g:Label></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE" width="34%" ><g:Label ui:field="subdomain" styleName="{style.labelSubdomain}"></g:Label></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE" width="50%" ><g:Label ui:field="title"></g:Label></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT" width="5%"><g:Image title="Bearbeiten" styleName="{style.button}" url="img/edit.png" ui:field="edit"></g:Image></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_LEFT" width="5%"><g:Image  title="Kopieren" ui:field="copy" styleName="{style.button}" url="img/copy.png"></g:Image></g:cell>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 