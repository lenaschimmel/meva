<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.parent {
		border-bottom: 2px solid #ddd;

			
		}
		
		.labelSubdomain {
			cursor: pointer;
			text-decoration: underline;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel styleName="{style.parent}"
			ui:field="parent" >
			<g:cell verticalAlignment="ALIGN_MIDDLE"><g:Label width="40px" ui:field="id"></g:Label></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE"><g:Label width="150px" ui:field="subdomain" styleName="{style.labelSubdomain}"></g:Label></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE"><g:Label width="210px" ui:field="title"></g:Label></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE"><g:Button ui:field="edit">Bearbeiten</g:Button></g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE"><g:Button ui:field="copy">Kopieren</g:Button></g:cell>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 