<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.parent{
			position: absolute;
			top: 100px;
			left: 50px;
			z-index: 100;
			border-top-right-radius: 2px;
			border-bottom-right-radius: 2px;
			border-top-left-radius: 2px;
			border-bottom-left-radius: 2px;
			border: 1px solid rgba(100,100,100, 0.5);
			background: rgba(50, 50, 50, 0.85);
			color: #FFF;
			
		}
		.button{
			cursor: pointer;
		}
		.label{
			margin-right: 10px;
			width: 100px;
			margin-left: 10px;		}
			
		.h1{
			font-size: large;
			font-weight: bold;
			text-align: center;
			padding-bottom: 8px;
			padding-top: 5px;
			width: 100%;
			background: #000;
			margin-bottom: 10px;
		}
		
		.textBox{
			margin-right: 10px;
}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.parent}">
	<g:Label styleName="{style.h1}" ui:field="heading">Login</g:Label>
	    <g:HorizontalPanel><g:Label text="Benutzer:" styleName="{style.label}"/> <g:TextBox styleName="{style.textBox}" ui:field="user"/> </g:HorizontalPanel>
	    <g:HorizontalPanel><g:Label text="Passwort:" styleName="{style.label}"/> <g:TextBox styleName="{style.textBox}" ui:field="password"/> </g:HorizontalPanel>
	    <g:Button styleName="{style.button}" text="Login" ui:field="loginButton"/>
	</g:HTMLPanel>
</ui:UiBinder> 