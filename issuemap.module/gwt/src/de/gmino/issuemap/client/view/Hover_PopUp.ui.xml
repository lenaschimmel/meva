<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
		<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />
	
	
	<ui:style>
		.div {
			background-color: #333;
			border-top-right-radius: 10px;
			border-bottom-right-radius: 10px;
			border-top-left-radius: 1px;
			border-bottom-left-radius: 1px;
			/* Override glass panel to 10% opacity (= 90% transparency) */
			filter: alpha(opacity =   1) !important; /* IE */
			opacity: 0.9 !important; /* non-IE */
			position: absolute;
			top:2px;
			left:29px;
			
		}
		
		.title_lable {
			color: #FFF;
			margin-top: 5px;
			text-align: center;
			font-weight:bold;
			margin-bottom: 4px;
			padding-left: 5px;
			padding-right: 5px;
			white-space: nowrap;
			width: auto;
		}
		
		.description_lable {
			color: #FFF;
			margin-bottom: 10px;
			margin-left: 10px;
			margin-right: 10px;
			margin-top: 5px;

		}

		
		.picture {
			padding: 10px;
		}
	</ui:style>

			<g:VerticalPanel ui:field="expanded_marker" styleName="{style.div}">
				<g:Label styleName="{style.title_lable}" text="Schlagloch" ui:field="title"/>
<!-- 				<g:Label ui:field="description"  styleName="{style.description_lable}"/> -->
			</g:VerticalPanel>
			


</ui:UiBinder> 