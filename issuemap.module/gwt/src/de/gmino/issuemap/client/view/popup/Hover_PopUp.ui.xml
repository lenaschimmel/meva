<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
		<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />
	
	
	<ui:style>
		.div {
			background:  rgba(0, 0, 0, 0.75);
			border-top-right-radius: 4px;
			border-bottom-right-radius: 4px;
			border-top-left-radius: 1px;
			border-bottom-left-radius: 1px;
			position: absolute;

		}
		
		.title_lable {
			color: #FFF;
			margin-top: 5px;
			text-align: center;
			font-weight:bold;
			margin-bottom: 4px;
			padding-left: 5px;
			padding-right: 5px;
			white-space: nowrap;
			width: auto;
		}
		

		
	</ui:style>

			<g:VerticalPanel ui:field="expanded_marker" styleName="{style.div}">
				<g:Label styleName="{style.title_lable}" text="Schlagloch" ui:field="title"/>
			</g:VerticalPanel>
			


</ui:UiBinder> 