<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.parent {
		width: 600px;
		background-color: #333;
		position: absolute;
		top: -50px;
		left: -300px;
		filter: literal("alpha(opacity = 1)") !important; /* IE */
		opacity: 0.9 !important; /* non-IE */
		border-top-right-radius: 4px;
		border-bottom-right-radius: 4px;
		border-top-left-radius: 4px;
		border-bottom-left-radius: 4px;
		border: 1px solid rgba(100, 100, 100, 0.85);
		-webkit-box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		}

	
		
		

		.title_label {
		color: #FFF;
		font-size: large;
		font-weight: bold;
		text-align: center;
		padding-bottom: 8px;
		padding-top: 5px;
		width: auto;
		background: #000;
		color: #FFF;
		-webkit-box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		}



		.info_label {
		margin-top: 5px;
		color: #FFF;
		margin-bottom: 10px;
		padding-right: 10px;
		padding: 15px;
		}

		.closeButton {
		position: absolute;
		top: -10px;
		right: -10px;
		cursor: pointer;
		}
		
		.impressum{
		cursor: pointer;
		margin-top: 10px;
		color: #FFF;
		text-decoration: underline;
		width: 95%;
		text-align: right;
		padding-bottom: 15px;
		}
		
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label ui:field="title" styleName="{style.title_label}"></g:Label>
		<g:Image resource="{resources.close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
		
			<g:HTML ui:field="infotext" styleName="{style.info_label}"/>
		
			<g:Label ui:field="impressum" styleName="{style.impressum}">Impressum</g:Label>
	</g:VerticalPanel>
</ui:UiBinder> 