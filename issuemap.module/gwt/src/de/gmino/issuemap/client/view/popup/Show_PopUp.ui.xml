<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style type="de.gmino.issuemap.client.view.popup.Show_PopUp.Style">
		.important {
		font-weight: bold;
		}

		.parent {
		width:
		490px;
		background: rgba(20,20,20,0.8);
		position: absolute;
		left: -22px;
		top: -38px;
		border-top-right-radius: 4px;
		border-bottom-right-radius:
		4px;
		border-top-left-radius: 4px;
		border-bottom-left-radius: 4px;
		border: 1px solid rgba(100, 100, 100, 0.85);
		-webkit-box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);

		
		padding: 0;
		color: #fff;
		}

		.lbTitle {
		color: #FFF;
		font-weight: bold;
		font-size: 115%;
		overflow: hidden;
		text-overflow:
		ellipsis;
		white-space: nowrap;
		width: 20em;
		}

		.lbTypeAndDate {
		font-size:
		90%;
		}

		.divider {
		font-weight: bold;
		}

		.description_label {
		margin-bottom:
		10px;
		padding-right: 10px;
		}

		.meta_label_bold {
		font-weight: bold;
		padding-bottom: 3px;
		}

		.meta_label {
		padding-bottom: 3px;
		margin-left:
		10px;
		text-align: right;
		margin-right: 15px;
		}

		.closeButton {
		position:
		absolute;
		top: -10px;
		right:
		-10px;
		cursor: pointer;
		}

		.rateButton {
		cursor: pointer;

		}

		.deleteButton {
		cursor: pointer;
		margin-left: 3px;
		}

		.editButton {
		cursor: pointer;
		}

		.countRatingLabel {
		padding-left: 13px;
		}

		.footer {
		margin-top: 5px;
		}

		.topCell {
		cursor: pointer;
		}

		.topCell:hover {
		background: #444;
		}

		.topButton {
		color: #FFF;
		cursor: pointer;
		background-color: #000;
		height: 36px;
		width: 40px;
		border-bottom: 4px
		solid transparent;
		}

		.topInfo {
		color: #FFF;
		background-color: #000;
		height: 36px;
		width: 45px;
		border-bottom: 4px solid transparent;
		}

		.wideTopButton {
		color: #FFF;
		cursor: pointer;
		background-color: #000;
		height: 36px;
		width: 40px;
		position: relative;
		}

		.topButton:hover {
		background-color: #333;
		}

		.wideTopButton:hover {
		background-color: #333;
		}

		.tabButton {
		height: 33px;
		width: 119px;

		color: #CCC;
		background-color:
		#333;
		border-top: none;
		border-left: 0px none;
		border-right: 0px none;
		border-bottom: 4px solid transparent;
		float:left;
		cursor: pointer;

		white-space: nowrap;
		font-size: 80%;
		text-align: center;
		text-transform:uppercase;
		font-weight: bold;
		}

		.tabButton:hover {
		background-color: #666;
		border-bottom: 4px solid #4DADDE;
		color: #FFF;
		}

		.upperBar {
		background: #000;
		border-bottom: 1px solid #666;
		height:
		40px;
		width: 500px;
		z-index: 2000;
		-webkit-box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		
		}

		.lowerBar {
		background-color: #333;
		border-bottom:
		1px solid #666;
		-webkit-box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.4);
		}

		.tbClose {
		background: url(img/close.png) no-repeat
		center;
		}

		.tbDelete {
		background: url(img/delete.png) no-repeat center;
		}

		.tbEdit {
		background: url(img/edit.png) no-repeat center;
		}

		.tbOpen {
		background: url(img/open.png) no-repeat center;
		}

		.tbResolved {
		background: url(img/resolved.png) no-repeat center;
		}

		.tbSave {
		background: url(img/Floppy.png) no-repeat center;
		}

		.lbRating {
		line-height:
		39px;
		width: 100%;
		text-align: center;
		font-size: 130%;
		}

		.lbRatingSmall {
		font-size: 130%;
		left: 18px;
		position: absolute;
		right:
		0;
		text-align: center;
		top: 10px;
		}

		.lbRatingSmallBottom {
		font-size: 130%;
		left:
		17px;
		position: absolute;
		right: 0;
		text-align: center;
		top: 2px;
		}

		.rateButton {
		position: absolute;
		left: 7px;
		top: 17px;
		}

		.rateButtonBottom {
		position: absolute;
		left: 7px;
		top: 12px;
		}

		.dualTextPanel {
		margin-left: 2px;
		margin-top: 3px;
		}

		.imageMarkerIcon {
		margin-left: 5px;
		margin-top: 3px;
		}

		.tabDivider {
		background-color:
		#999999;
		border-bottom: 6px solid #333333;
		border-top: 6px solid
		#333333;
		height:
		21px;
		width: 1px;
		float: left;
		}

		.mainArea {
		padding: 12px;
		}

		.underline {
		border-bottom: 4px solid #4DADDE;
		}

		.active {
		background:
		rgba(155,155,155, 0.5);
		border-radius: 4px;
		}

		.imageWrapper {
		height:
		31px;
		width:
		40px;
		overflow: hidden;
		}

		.lbBodyHeader {
		font-size: 100%;
		text-transform:uppercase;
		font-weight: bold;
		border-bottom: 1px solid
		#FFF;
		padding-bottom: 3px;
		margin-bottom: 8px;
		}

		.subContent {
		/*
		margin-bottom:
		15px;*/
		}

		.lbWhatsThis {
		font-size: 70%;
		font-style:
		italic;
		font-weight: normal;
		margin-top: 3px;
		cursor: pointer;
		}

		.lbWhatsThis:hover {
		text-decoration: underline;
		}

		.btRelUp {
		left: 80px;
		position: absolute;
		top: 0px;
		height: 30px;
		width: 53px;
		cursor: pointer;
		}

		.btRelDown {
		left: 80px;
		position: absolute;
		top: 30px;
		height: 30px;
		width: 53px;
		cursor: pointer;
		}

		.lbRelShow {
		font-size: 200%;
		font-weight:
		bold;
		left:
		30px;
		position: absolute;
		top: 10px;
		}

		.tabDescription{

		height:
		320px;

		}

		.descriptionPanel{
		width: 310px;
		float: left;
		margin-bottom: 12px;
		}
		.descriptionLeftPanel{
		float: left;
		margin-left: 15px;
		}

		.ratingCriteria{

		}

		.rateInfo{
		cursor: pointer;
		}

		.editTitle{
			margin-top: 6px;
			width: 98%;
			height: 24px;
			color: #FFF;
			background-color: #333;
			font-weight: bold;
			border-left: 1px solid #444;
			border-top: 1px solid #444;
			border-right: 1px solid #555;
			border-bottom: 1px solid #555;
			border-radius: 2px 2px 2px 2px;
			padding-left: 5px;
			font-size: 115%;

		}
		
        .listbox{
        margin-top: 3px;
        margin-left: 12px;
        height: 26px;
        padding-top: 2px;
        padding-left: 5px;
        
        width: 96%;
        color: #FFF;
			background-color: #444;
			border-left: 1px solid #555;
			border-top: 1px solid #555;
			border-right: 1px solid #666;
			border-bottom: 1px solid #666;
			border-radius: 1px 1px 1px 1px;
		}

	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Cell><!-- Kopfbereich a.k.a. Mouseover -->
			<g:HorizontalPanel styleName="{style.upperBar}">
				<g:cell width="40px">
					<g:SimplePanel styleName="{style.imageWrapper}">
						<g:Image ui:field="imageMarkerIcon" styleName="{style.imageMarkerIcon}" />

					</g:SimplePanel>
				</g:cell>
				 <g:DeckPanel ui:field="dpTtitleOrTextBox">
				     <g:HorizontalPanel>
						<g:cell width="315px">
							<g:VerticalPanel styleName="{style.dualTextPanel}">
								<g:Label ui:field="lbTitle" styleName="{style.lbTitle}" />
								<g:Label ui:field="lbTypeAndDate" styleName="{style.lbTypeAndDate}" />
							</g:VerticalPanel>
						</g:cell>
		
						<!-- <g:cell height="100%" width="40px"> <g:FocusPanel styleName="{style.wideTopButton}" ui:field="tbRatingUp" title="Rating um 1 erhöhen"> <g:FlowPanel> <g:Image resource="{resources.go_up}" styleName="{style.rateButton}" 
							ui:field="rate_up" /> <g:Label ui:field="lbRatingUpCount" styleName="{style.lbRatingSmall}">?</g:Label> </g:FlowPanel> </g:FocusPanel> </g:cell> <g:cell height="100%" width="40px"> <g:FocusPanel styleName="{style.wideTopButton}" 
							ui:field="tbRatingDown" title="Rating um 1 senken"> <g:FlowPanel> <g:Image resource="{resources.go_down}" styleName="{style.rateButton}" ui:field="rate_down" /> <g:Label ui:field="lbRatingDownCount" styleName="{style.lbRatingSmall}">?</g:Label> 
							</g:FlowPanel> </g:FocusPanel> </g:cell> -->
		
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topInfo}" ui:field="tbRating" title="Rating">
								<g:Label ui:field="lbRating" styleName="{style.lbRating}">?</g:Label>
							</g:FocusPanel>
						</g:cell>
		
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topButton} {style.tbResolved}" ui:field="tbResolved" title="Als erledigt markieren" />
						</g:cell>
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topButton} {style.tbEdit}" ui:field="tbEdit" title="Informationen bearbeiten" />
						</g:cell>
						<!-- <g:cell height="100%" width="40px"> <g:FocusPanel styleName="{style.topButton} {style.tbOpen}" ui:field="tbOpen" title="Popup öffnen"></g:FocusPanel> </g:cell> -->
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topButton} {style.tbClose}" ui:field="tbClose" title="Popup schließen" />
						</g:cell>
					</g:HorizontalPanel>
					<g:HorizontalPanel>

						<g:cell><g:TextBox styleName="{style.editTitle}" ui:field="tbTitle"></g:TextBox></g:cell>
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topButton} {style.tbDelete}" ui:field="btDelete" title="Eintrag löschen" />
						</g:cell>
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topButton} {style.tbSave}" ui:field="btSave" title="Speichern" />
						</g:cell>
						<g:cell height="100%" width="40px">
							<g:FocusPanel styleName="{style.topButton} {style.tbClose}" ui:field="btCancel" title="Verwerfen" />
						</g:cell>



					</g:HorizontalPanel>
				</g:DeckPanel>
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell><!-- Tabknöpfe -->
		    <g:DeckPanel ui:field="dpTabsOrDropdown">
				<g:FlowPanel   width="100%" height="33px"  styleName="{style.lowerBar}" >
					<g:Button styleName="{style.tabButton}" ui:field="tabButtonDescription">Übersicht</g:Button>
					<g:Label ui:field="tabDivider1" styleName="{style.tabDivider}">&nbsp;</g:Label>
					<g:Button styleName="{style.tabButton}" ui:field="tabButtonPhotos">Fotos</g:Button>
					<g:Label ui:field="tabDivider2" styleName="{style.tabDivider}">&nbsp;</g:Label>
					<g:Button styleName="{style.tabButton}" ui:field="tabButtonComments">Kommentare</g:Button>
					<g:Label ui:field="tabDivider3" styleName="{style.tabDivider}">&nbsp;</g:Label>

					<g:Label />
				</g:FlowPanel>
				<g:FlowPanel   width="100%" height="33px"  styleName="{style.lowerBar}" >
					<g:ListBox ui:field="lbMarkertype" styleName="{style.listbox}"></g:ListBox>
				</g:FlowPanel>
			</g:DeckPanel>
		</g:Cell>
		
		<g:Cell><!-- Haubtbereich mit Tabinhalten -->
			<g:DeckPanel ui:field="deckPanel" styleName="{style.mainArea}">
				<g:FlowPanel ui:field="tabDescription" styleName="{style.tabDescription}"> <!-- Description -->
					<g:ScrollPanel styleName="{style.descriptionPanel}" height="240px" ui:field="descriptionPanel">

						<g:VerticalPanel width="100%" ui:field="keyValuePanel" />
					</g:ScrollPanel>

					<g:VerticalPanel styleName="{style.descriptionLeftPanel}" height="100%">
						<g:HorizontalPanel styleName="{style.lbBodyHeader}" ui:field="pnPhotoHeading" width="133px">
							<g:cell width="70px">
								<g:Label ui:field="lbPhotoMainHeader">Foto</g:Label>
							</g:cell>
							<g:Label ui:field="lbMorePhotos" styleName="{style.lbWhatsThis}" />
						</g:HorizontalPanel>

						<g:VerticalPanel height="120px" ui:field="pnPhotoMain" width="133px">
							<g:HTML ui:field="lbNoPhotosMain" styleName="{style.description_label}">
								<i>(Bisher keine Fotos)</i>
							</g:HTML>
						</g:VerticalPanel>

						<g:HorizontalPanel styleName="{style.lbBodyHeader}" ui:field="pnRatingHeading" width="133px">
							<g:cell width="113px">
								<g:Label styleName="{style.ratingCriteria}" ui:field="ratingCriteria">Relevanz</g:Label>
							</g:cell>
							<g:cell width="20px" verticalAlignment="ALIGN_MIDDLE">
								<g:Image ui:field="lbWhatsThis" styleName="{style.rateInfo}" resource='{resources.info_small}' />
							</g:cell>
						</g:HorizontalPanel>

						<g:AbsolutePanel height="60px" ui:field="pnRatingMain" width="133px">
							<g:FocusPanel styleName="{style.btRelUp}" ui:field="tbRatingUp2" title="Rating um 1 erhöhen">
								<g:FlowPanel>
									<g:Image resource="{resources.go_up}" styleName="{style.rateButtonBottom}" ui:field="rate_up2" />
									<g:Label ui:field="lbRatingUpCount2" styleName="{style.lbRatingSmallBottom}">?</g:Label>
								</g:FlowPanel>
							</g:FocusPanel>
							<g:FocusPanel styleName="{style.btRelDown}" ui:field="tbRatingDown2" title="Rating um 1 senken">
								<g:FlowPanel>
									<g:Image resource="{resources.go_down}" styleName="{style.rateButtonBottom}" ui:field="rate_down2" />
									<g:Label ui:field="lbRatingDownCount2" styleName="{style.lbRatingSmallBottom}">?</g:Label>
								</g:FlowPanel>
							</g:FocusPanel>
							<g:Label ui:field="lbRating2" styleName="{style.lbRelShow}">?</g:Label>
						</g:AbsolutePanel>
					</g:VerticalPanel>
				</g:FlowPanel>
				<g:VerticalPanel width="100%" height="240px" ui:field="tabPhotos">
					<g:Label styleName="{style.lbBodyHeader}" ui:field="photosHeader">Fotos</g:Label>
					<g:cell height="66%">
						<g:ScrollPanel width="100%" height="135px" styleName="{style.subContent}">
							<g:FlowPanel ui:field="picturesPanel">
								<g:Label ui:field="lbNoPhotos">Bisher wurden keine Fotos zu diesem
									Eintrag hochgeladen.</g:Label>
							</g:FlowPanel>
						</g:ScrollPanel>
					</g:cell>
					<g:Label styleName="{style.lbBodyHeader}">Eigenes Foto hochladen</g:Label>
					<g:cell height="40px">
						<g:SimplePanel ui:field="uploadPlaceholder"></g:SimplePanel> 
					</g:cell>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%" height="240px" ui:field="tabComments">
					<g:Label styleName="{style.lbBodyHeader}" ui:field="commentsHeader">Kommentare</g:Label>
					<g:cell height="66%">
						<g:ScrollPanel width="100%" height="135px" styleName="{style.subContent}" ui:field="spComments">
							<g:VerticalPanel ui:field="commentsPanel">
								<g:Label ui:field="lbNoComments">Bisher wurden keine Kommentare zu
									diesem Eintrag geschrieben.</g:Label>
							</g:VerticalPanel>
						</g:ScrollPanel>
					</g:cell>
					<g:Label styleName="{style.lbBodyHeader}">Eintrag kommentieren</g:Label>
					<g:cell height="40px">
						<g:HorizontalPanel width="100%">
							<g:cell width="95%">
								<g:TextBox width="92%" ui:field="commentTextBox" />
							</g:cell>
							<g:cell>
								<g:Button ui:field="commentButton">Kommentieren</g:Button>
							</g:cell>
						</g:HorizontalPanel>
					</g:cell>
				</g:VerticalPanel>
			</g:DeckPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder>