<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.header {
			font-size: 90%;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			background:  rgba(0, 0, 0, 0.8);
			z-index: 5;
			z-index: 5;
			min-height: 35px;
			padding-left: 10px;
			padding-top: 5px;
			min-width: 730px;
			border-bottom: 1px solid rgba(0, 0, 0, 0.5);	
			-webkit-box-shadow: 4px 4px 20px 4px rgba(0, 0, 0, 0.4);
			box-shadow: 4px 4px 20px 4px rgba(0, 0, 0, 0.4);
			

			}
		
		.title {
			font-size: 1.7em;
			text-align: center;
			color: #FFF;
			font-weight: bolder;
			margin-top: 7px;
			margin-bottom: 7px;
		}
		
		.infoButton {
			margin-top: 9px;
			margin-left: 3px;
			margin-right:5px;
			display: block;
			font-size: 16pt;
			cursor: pointer;
		}
		
		.button {
			text-align: center;
			font-variant: small-caps;
			color: #4DADDE;
			min-height: 15px;
			border: 0px;
			padding-left: 20px;
			padding-bottom: 12px;
			background: #000;
			cursor: pointer;
		}
		
		.image {
			cursor: pointer;
		}
		
		.searchField {
			margin-top: 10px;
			margin-right: 15px;
			background:#ffffff url('search.png') no-repeat left;
    		border: 1px solid rgba(0, 0, 0, 0.5);;
    		border-radius: 5px 5px 5px 5px;
    		display: block;
    		height: 28px;
    		padding: 0 22px 0 28px;
		}
		
		.blur { 
		}

		.logInfo {
			margin-right: 6px;
			margin-top: 13px;
			font-size: 1.3em;			
		}

		.logAction {
			margin-right: 6px;
			text-decoration: underline;
			cursor: pointer;
			margin-top: 13px;
			font-size: 1.3em;			
		}
	</ui:style>

	<g:HorizontalPanel styleName="{style.header}" width="100%"
		ui:field="header">
	<g:HTMLPanel styleName="{style.blur}"></g:HTMLPanel>
		<g:cell width="20%" verticalAlignment="ALIGN_MIDDLE">
			<g:Image ui:field="logo" url="loading.gif" height="45px" styleName="{style.image}"/>
		</g:cell>

		<g:cell width="45%" horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel>
				<g:Label styleName="{style.title}" ui:field="title">... Daten werden geladen</g:Label>
				<g:PushButton styleName="{style.infoButton}"
					ui:field="info_button" height="30px" title="Infos zu der Karte und Impressum" visible="false">
					<g:upFace image='{resources.info}' />
					<g:upHoveringFace image='{resources.info_hover}' />
				</g:PushButton>
			</g:HorizontalPanel>
		</g:cell>

		<g:cell width="20%" horizontalAlignment="ALIGN_RIGHT">
			<g:Label styleName="{style.logInfo}" ui:field="logInfo">Nicht eingeloggt</g:Label>
		</g:cell>
		<g:cell width="20%" horizontalAlignment="ALIGN_RIGHT">
			<g:Label styleName="{style.logAction}" ui:field="logAction">Logout</g:Label>
		</g:cell>
		<g:cell>
			<g:Label></g:Label>
		</g:cell>
		
		<g:cell width="20%" horizontalAlignment="ALIGN_RIGHT">
			<g:TextBox styleName="{style.searchField}" text="" ui:field="search_field"></g:TextBox>
		</g:cell>
		<g:cell>
			<g:Label></g:Label>
		</g:cell>

	</g:HorizontalPanel>
</ui:UiBinder> 