<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.parent {
			width: 400px;
			background-color: #333;
			position: absolute;
			top: -50%;
			left: -200px;
			/* Override glass panel to 10% opacity (= 90% transparency) */
			filter: alpha(opacity =             1) !important; /* IE */
			opacity: 0.95 !important; /* non-IE */
			border-top-right-radius: 10px;
			border-bottom-right-radius: 10px;
			border-top-left-radius: 10px;
			border-bottom-left-radius: 10px;
			border: 3px solid;
			padding: 10px;
		}
		
		.content {
			width: 420px;
		}
		
		.description {
			height: 100px;
			margin-top: 5px;
		}
		
		.title_label {
			color: #FFF;
			text-align: center;
			font-weight: bold;
			font-size: large;
			padding-bottom: 10px;
			white-space: nowrap;
			width: auto;
			border-top-right-radius: 10px;
			border-top-left-radius: 10px;
		}
		
		.text {
			color: #FFF;
			padding-left: 15px;
			padding-right: 15px;
			margin-top:7px;
		}
		
		.cellelement{
			margin-top: 5px;
			}
		
		.closeButton {
			position: absolute;
			top: 0px;
			right: 0px;
			cursor: pointer;
		}
		
		.savebutton{
			margin-top: 5px;
			margin-left: 60px;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label styleName="{style.title_label}" ui:field="headLable">Marker
			bearbeiten</g:Label>
		<g:Image resource="{resources.close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
		<g:VerticalPanel styleName="{style.content}">
			<g:cell>
				<g:TextBox styleName="{style.cellelement}" text="Titel" width="95%" ui:field="title">
				</g:TextBox>

			</g:cell>
			<g:cell>

				<g:TextBox styleName="{style.cellelement}" text="Veranstalter" width="95%" ui:field="organizer"></g:TextBox>

			</g:cell>
			<g:cell>

				<g:TextArea text="Beschreibung..." width="95%" ui:field="description"
					styleName="{style.description}"></g:TextArea>

			</g:cell>
			<g:cell>
				<g:TextBox styleName="{style.cellelement}" text="Bild URL" width="95%" ui:field="picture"></g:TextBox>
			</g:cell>
			<g:cell>
				<g:HorizontalPanel>
				<g:Label styleName="{style.text}">Preis:</g:Label>
					<g:ListBox styleName="{style.cellelement}" ui:field="pricebox">
						<g:item value='0'>
							Eintritt frei
						</g:item>
						<g:item value='1'>
							1€
						</g:item>
						<g:item value='2'>
							2€
						</g:item>
						<g:item value='3'>
							3€
						</g:item>
						<g:item value='4'>
							4€
						</g:item>
						<g:item value='5'>
							5€
						</g:item>
					</g:ListBox>
					<g:Label styleName="{style.text}">Kategorie:</g:Label>
					<g:ListBox styleName="{style.cellelement}" ui:field="typebox">
					</g:ListBox>


					<g:Button styleName="{style.savebutton}" ui:field="button" text="Eintragen" />
				</g:HorizontalPanel>
			</g:cell>

		</g:VerticalPanel>
	</g:VerticalPanel>

</ui:UiBinder> 