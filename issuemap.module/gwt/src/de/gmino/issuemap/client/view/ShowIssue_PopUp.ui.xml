<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.parent {
			width: 400px;
			background-color: #333;
			position: absolute;
			top: -50%;
			left: -200px;
			/* Override glass panel to 10% opacity (= 90% transparency) */
			filter: alpha(opacity = 1) !important; /* IE */
			opacity: 0.95 !important; /* non-IE */
			border-top-right-radius: 10px;
			border-bottom-right-radius: 10px;
			border-top-left-radius: 10px;
			border-bottom-left-radius: 10px;
			border: 3px solid;
			padding: 10px;
		}
		
		.title_label {
			color: #FFF;
			text-align: center;
			font-weight: bold;
			font-size: large;
			padding-bottom: 15px;
			white-space: nowrap;
			width: auto;
			border-top-right-radius: 10px;
			border-top-left-radius: 10px;
		}
		
		.divider {
			color: #FFF;
			font-weight: bold;
		}
		
		.description_label {
			color: #FFF;
			margin-top: 10px;
			margin-bottom: 10px;
			padding-right: 10px;
		}
		
		.meta_label{
			color: #FFF;
			font-weight: bold;
			padding-bottom: 3px;
		}
		
		.closeButton {
			position: absolute;
			top: 0px;
			right: 0px;
			cursor: pointer;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label ui:field="title" styleName="{style.title_label}"></g:Label>
		<g:Image resource="{resources.close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
		<g:HorizontalPanel>
			<g:VerticalPanel width="240px">
				<g:Label styleName="{style.meta_label}" text="Eingetragen am ..."></g:Label>
				<g:Label styleName="{style.meta_label}" text="Typ: Ampel"></g:Label>
				<g:Label styleName="{style.meta_label}" text="Erledigt:" ></g:Label>
				<g:Label styleName="{style.meta_label}" text="Relevanz:" ></g:Label>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:Image ui:field="picture" width="300px"></g:Image>
				<!-- <g:Button ui:field="fotoupload" text="Foto hinzufÃ¼gen"></g:Button> -->
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:Label ui:field="description" styleName="{style.description_label}"></g:Label>
		<g:HorizontalPanel>
			<g:Image resource="{resources.edit}" ui:field="edit"></g:Image>
			<g:Image resource="{resources.delete}" ui:field="delete"></g:Image>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 