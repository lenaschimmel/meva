<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.parent {
			width: 400px;
			background-color: #333;
			position: absolute;
			top: -50%;
			left: -200px;
			/* Override glass panel to 10% opacity (= 90% transparency) */
			filter: alpha(opacity =         1) !important; /* IE */
			opacity: 0.9 !important; /* non-IE */
			border-top-right-radius: 10px;
			border-bottom-right-radius: 10px;
			border-top-left-radius: 10px;
			border-bottom-left-radius: 10px;
			border: 3px solid;
		}
		
		.content {
			padding: 10px;
		}
		
		.title_label {
			color: #FFF;
			text-align: center;
			font-weight: bold;
			font-size: larger;
			padding: 10px;
			white-space: nowrap;
			width: auto;
			border-top-right-radius: 10px;
			border-top-left-radius: 10px;
		}
		
		.divider {
			color: #FFF;
			text-align: center;
		}
		
		.description_label {
			color: #FFF;
			margin-bottom: 10px;
			padding-right: 10px;
		}
		
		.closeButton {
			position: absolute;
			top: 0px;
			right: 0px;
			cursor: pointer;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Label ui:field="title" styleName="{style.title_label}"></g:Label>
		<g:Image resource="{resources.close}" ui:field="close"
			styleName="{style.closeButton}"></g:Image>
		<g:HorizontalPanel styleName="{style.content}">
			<g:VerticalPanel width="240px">
				<g:Label ui:field="description" styleName="{style.description_label}"></g:Label>
				<g:HorizontalPanel>
					<g:Image resource="{resources.edit}" ui:field="edit"></g:Image>
					<g:Image resource="{resources.delete}" ui:field="delete"></g:Image>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:Image url="http://gmino.de/static/img/schlagloch.jpg"></g:Image>
				<g:Button ui:field="fotoupload" text="Foto hinzufÃ¼gen"></g:Button>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 