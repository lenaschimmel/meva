<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style type="de.gmino.issuemap.client.view.ShowIssue_PopUp.Style">
		.important {
			font-weight: bold;
		}
		
		.parent {
			width: 300px;
			background: rgba(20, 20, 20, 0.8);
			position: absolute;
			left: -22px;
			top: -38px;
			border-top-right-radius: 4px;
			border-bottom-right-radius: 4px;
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;
			border: 1px solid #ccc;
			padding: 0;
			color: #fff;
		}
		
		.lbTitle {
			color: #FFF;
			font-weight: bold;
			font-size: 115%;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
			width: 305px;
		}

		.lbTypeAndDate {
			font-size: 90%;
		}
		
		.divider {
			font-weight: bold;
		}
		
		.description_label {
			margin-top: 10px;
			margin-bottom: 10px;
			padding-right: 10px;
		}
		
		.meta_label_bold {
			font-weight: bold;
			padding-bottom: 3px;
		}
		
		.meta_label {
			padding-bottom: 3px;
			margin-left: 10px;
			text-align: right;
			margin-right: 15px;
		}
		
		.closeButton {
			position: absolute;
			top: -10px;
			right: -10px;
			cursor: pointer;
		}
		
		.rateButton {
		}
		
		.deleteButton {
			cursor: pointer;
			margin-left: 3px;
		}
		
		.editButton {
			cursor: pointer;
		}
		
		.countRatingLabel {
			padding-left: 13px;
		}
		
		.footer {
			margin-top: 5px;
		}
		
		.topCell {
			cursor: pointer;
		}
		
		.topCell:hover {
			background: #444;
		}

		.topButton {
			color: #FFF;
			cursor: pointer;
			background-color: #000;
			height: 100%;
			width: 40px;
		}

		.wideTopButton {
			color: #FFF;
			cursor: pointer;
			background-color: #000;
			height: 100%;
			width: 40px;
			position: relative;
		}

		.topButton:hover {
			background-color: #333;
		}

		.wideTopButton:hover {
			background-color: #333;
		}

		.tabButton {
			height: 100%;
			width: 100%;

			color: #CCC;
			background-color: #333;
			border-top: none;
			border-left: 0px none;
			border-right: 0px none;
			border-bottom: 4px solid transparent;
			
			cursor: pointer;

			white-space: nowrap;
			font-size: 80%;
			text-align: center;
			text-transform:uppercase;
			font-weight: bold;
		}

		.tabButton:hover {
			background-color: #666;
			border-bottom: 4px solid #4DADDE;
			color: #FFF;
		}

		.upperBar {
			background-color: #000;
			border-bottom: 1px solid #666;
			height: 40px;
		}

		.lowerBar {
			background-color: #333;
			border-bottom: 1px solid #666;
		}

		.tbClose {
			background: url(img/close.png) no-repeat center;
		}

		.tbDelete {
			background: url(img/delete.png) no-repeat center;
		}

		.tbEdit {
			background: url(img/edit.png) no-repeat center;
		}

		.tbOpen {
			background: url(img/open.png) no-repeat center;
		}

		.tbResolved {
			background: url(img/resolved.png) no-repeat center;
		}

		.lbRating {
			line-height: 39px;
			width: 100%;
			text-align: center;
			font-size: 130%;
		}

		.lbRatingSmall {
 			font-size: 130%;
    		left: 18px;
    		position: absolute;
    		right: 0;
		    text-align: center;
 			top: 10px;
		}

		.rateButton {
			position: absolute;
  			left: 7px;
    		top: 17px;
		}

		.dualTextPanel {
			margin-left: 2px;
    		margin-top: 3px;
		}

		.imageMarkerIcon {
			margin-left: 5px;
			margin-top: 3px;
		}

		.tabDivider {
			background-color: #999999;
   			border-bottom: 6px solid #333333;
    		border-top: 6px solid #333333;
    		height: 21px;
			width: 1px;
		}

		.mainArea {
			padding: 5px;
		}

		.underline {
			border-bottom: 4px solid #4DADDE;
		}

		.imageWrapper {
			height: 31px;
			overflow: hidden;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Cell><!-- Kopfbereich a.k.a. Mouseover -->
		     <g:HorizontalPanel width="100%" styleName="{style.upperBar}">
				<g:cell width="40px">
				    <g:SimplePanel styleName="{style.imageWrapper}" >
						<g:Image ui:field="imageMarkerIcon" styleName="{style.imageMarkerIcon}">
						</g:Image>
					</g:SimplePanel>
				</g:cell>
				<g:cell>
					<g:VerticalPanel styleName="{style.dualTextPanel}" >
						<g:Label ui:field="lbTitle" styleName="{style.lbTitle}"></g:Label>
						<g:Label ui:field="lbTypeAndDate" styleName="{style.lbTypeAndDate}"></g:Label>
					</g:VerticalPanel>
				</g:cell>
				<g:cell height="100%" width="60px">
					<g:FocusPanel styleName="{style.wideTopButton}" ui:field="tbRatingUp" title="Rating um 1 erhöhen">
					    <g:FlowPanel>
					    	<g:Image resource="{resources.go_up}" styleName="{style.rateButton}" ui:field="rate_up" />
					    	<g:Label ui:field="lbRatingUpCount" styleName="{style.lbRatingSmall}">?</g:Label>
					    </g:FlowPanel>
					</g:FocusPanel>
				</g:cell>
				<g:cell height="100%" width="60px">
					<g:FocusPanel styleName="{style.wideTopButton}" ui:field="tbRatingDown" title="Rating um 1 senken">
					    <g:FlowPanel>
					    	<g:Image resource="{resources.go_down}" styleName="{style.rateButton}" ui:field="rate_down" />
					    	<g:Label ui:field="lbRatingDownCount" styleName="{style.lbRatingSmall}">?</g:Label>
					    </g:FlowPanel>
					</g:FocusPanel>
				</g:cell>
				
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton}" ui:field="tbRating" title="Rating vergeben"><g:Label ui:field="lbRating" styleName="{style.lbRating}">?</g:Label></g:FocusPanel>
				</g:cell>
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbResolved}" ui:field="tbResolved" title="Als erledigt markieren"></g:FocusPanel>
				</g:cell>
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbEdit}" ui:field="tbEdit" title="Informationen bearbeiten"></g:FocusPanel>
				</g:cell>
				<!--  <g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbOpen}" ui:field="tbOpen" title="Popup öffnen"></g:FocusPanel>
				</g:cell>-->
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbClose}" ui:field="tbClose" title="Popup schließen"></g:FocusPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell><!-- Tabknöpfe -->
			<g:HorizontalPanel styleName="{style.lowerBar}" width="100%" height="33px" >
				<g:cell width="25%"><g:Button styleName="{style.tabButton}" ui:field="tabButtonDescription">Allgemein</g:Button></g:cell>
				<g:cell width="1px" height="100%"><g:Label styleName="{style.tabDivider}">&nbsp;</g:Label></g:cell>
				<g:cell width="25%"><g:Button styleName="{style.tabButton}" ui:field="tabButtonPhotos">Bilder</g:Button></g:cell>
				<g:cell width="1px" height="100%"><g:Label styleName="{style.tabDivider}">&nbsp;</g:Label></g:cell>
				<g:cell width="25%"><g:Button styleName="{style.tabButton}" ui:field="tabButtonComments">Kommentare</g:Button></g:cell>
				<g:cell width="1px" height="100%"><g:Label styleName="{style.tabDivider}">&nbsp;</g:Label></g:cell>
				<g:cell width="25%" height="100%">
					<g:Label></g:Label>
				</g:cell> 
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell><!-- Haubtbereich mit Tabinhalten -->
			<g:DeckPanel ui:field="deckPanel" styleName="{style.mainArea}">
				<g:ScrollPanel ui:field="tabDescription" width="550px"
					height="300px"><!-- Description -->
					<g:VerticalPanel>
						<g:HTML ui:field="description" styleName="{style.description_label}"></g:HTML>
					</g:VerticalPanel>
				</g:ScrollPanel>
				<g:ScrollPanel ui:field="tabPhotos" width="550px"
					height="300px"><!-- Photos -->
					<g:VerticalPanel>
						<g:Label ui:field="photosHeader" styleName="{style.meta_label_bold}">Fotos:</g:Label>
						<g:FlowPanel ui:field="picturesPanel">
						</g:FlowPanel>
						<g:FormPanel ui:field="form" width="90%">
							<g:FileUpload ui:field="fileupload"></g:FileUpload>
						</g:FormPanel>
						<g:Button ui:field="uploadButton">Hochladen</g:Button>
					</g:VerticalPanel>
				</g:ScrollPanel>
				<g:ScrollPanel ui:field="tabComments" width="550px"
					height="300px"><!-- Comments -->
					<g:VerticalPanel>
						<g:Label ui:field="commentsHeader" styleName="{style.meta_label_bold}">Kommentare:</g:Label>
						<g:VerticalPanel ui:field="commentsPanel">
						</g:VerticalPanel>
						<g:Label styleName="{style.meta_label_bold}">Kommentar abgeben:</g:Label>
						<g:HorizontalPanel width="100%">
							<g:cell width="80%">
								<g:TextBox width="90%" ui:field="commentTextBox"></g:TextBox>
							</g:cell>
							<g:cell width="20%">
								<g:Button ui:field="commentButton">Kommentieren</g:Button>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:ScrollPanel>
			</g:DeckPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder> 