<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="de.gmino.issuemap.client.resources.ImageResources" />

	<ui:style type="de.gmino.issuemap.client.view.ShowIssue_PopUp.Style">
		.important {
			font-weight: bold;
		}
		
		.parent {
			width: 300px;
			background: rgba(20, 20, 20, 0.8);
			position: absolute;
			left: -22px;
			top: -38px;
			border-top-right-radius: 4px;
			border-bottom-right-radius: 4px;
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;
			border: 1px solid #ccc;
			padding: 0;
			color: #fff;
		}
		
		.lbTitle {
			color: #FFF;
			font-weight: bold;
			font-size: 115%;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
		}

		.lbTypeAndDate {
			font-size: 90%;
		}
		
		.divider {
			font-weight: bold;
		}
		
		.description_label {
			margin-top: 10px;
			margin-bottom: 10px;
			padding-right: 10px;
		}
		
		.meta_label_bold {
			font-weight: bold;
			padding-bottom: 3px;
		}
		
		.meta_label {
			padding-bottom: 3px;
			margin-left: 10px;
			text-align: right;
			margin-right: 15px;
		}
		
		.closeButton {
			position: absolute;
			top: -10px;
			right: -10px;
			cursor: pointer;
		}
		
		.rateButton {
			cursor: pointer;

		}
		
		.deleteButton {
			cursor: pointer;
			margin-left: 3px;
		}
		
		.editButton {
			cursor: pointer;
		}
		
		.countRatingLabel {
			padding-left: 13px;
		}
		
		.footer {
			margin-top: 5px;
		}
		
		.topCell {
			cursor: pointer;
		}
		
		.topCell:hover {
			background: #444;
		}

		.topButton {
			color: #FFF;
			cursor: pointer;
			background-color: #000;
			height: 36px;
			width: 40px;
			border-bottom: 4px solid transparent;
		}

		.wideTopButton {
			color: #FFF;
			cursor: pointer;
			background-color: #000;
			height: 36px;
			width: 40px;
			position: relative;
		}

		.topButton:hover {
			background-color: #333;
		}

		.wideTopButton:hover {
			background-color: #333;
		}

		.tabButton {
			height: 100%;
			width: 100%;

			color: #CCC;
			background-color: #333;
			border-top: none;
			border-left: 0px none;
			border-right: 0px none;
			border-bottom: 4px solid transparent;
			
			cursor: pointer;

			white-space: nowrap;
			font-size: 80%;
			text-align: center;
			text-transform:uppercase;
			font-weight: bold;
		}

		.tabButton:hover {
			background-color: #666;
			border-bottom: 4px solid #4DADDE;
			color: #FFF;
		}

		.upperBar {
			background-color: #000;
			border-bottom: 1px solid #666;
			height: 40px;
			width: 465px;
		}

		.lowerBar {
			background-color: #333;
			border-bottom: 1px solid #666;
		}

		.tbClose {
			background: url(img/close.png) no-repeat center;
		}

		.tbDelete {
			background: url(img/delete.png) no-repeat center;
		}

		.tbEdit {
			background: url(img/edit.png) no-repeat center;
		}

		.tbOpen {
			background: url(img/open.png) no-repeat center;
		}

		.tbResolved {
			background: url(img/resolved.png) no-repeat center;
		}

		.lbRating {
			line-height: 39px;
			width: 100%;
			text-align: center;
			font-size: 130%;
		}

		.lbRatingSmall {
 			font-size: 130%;
    		left: 18px;
    		position: absolute;
    		right: 0;
		    text-align: center;
 			top: 10px;
		}

		.rateButton {
			position: absolute;
  			left: 7px;
    		top: 17px;
		}

		.dualTextPanel {
			margin-left: 2px;
    		margin-top: 3px;
		}

		.imageMarkerIcon {
			margin-left: 5px;
			margin-top: 3px;
		}

		.tabDivider {
			background-color: #999999;
   			border-bottom: 6px solid #333333;
    		border-top: 6px solid #333333;
    		height: 21px;
			width: 1px;
		}

		.mainArea {
			padding: 12px;
		}

		.underline {
			border-bottom: 4px solid #4DADDE;
		}

		.imageWrapper {
			height: 31px;
			overflow: hidden;
		}

		.lbBodyHeader {
			white-space: nowrap;
			font-size: 100%;
			text-transform:uppercase;
			font-weight: bold;
			border-bottom: 1px solid #FFF;
			width: 100%;
			padding-bottom: 3px;
			margin-bottom: 8px;
		}

		.subContent	{
		/*	margin-bottom: 15px;*/
		}

		.lbWhatsThis {
			font-size: 70%;
   			font-style: italic;
   			font-weight: normal;
   			margin-top: 3px;
			cursor: pointer;
		}

		.lbWhatsThis:hover {
		    text-decoration: underline;
		}

		.btRelUp {
			left: 80px;
    		position: absolute;
    		top: 0px;
		}

		.btRelDown {
  			left: 80px;
    		position: absolute;
    		top: 30px;
		}

		.lbRelShow {
    		font-size: 200%;
    		font-weight: bold;
    		left: 30px;
    		position: absolute;
    		top: 21px;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.parent}" ui:field="parent">
		<g:Cell><!-- Kopfbereich a.k.a. Mouseover -->
		     <g:HorizontalPanel styleName="{style.upperBar}">
				<g:cell width="40px">
				    <g:SimplePanel styleName="{style.imageWrapper}" >
						<g:Image ui:field="imageMarkerIcon" styleName="{style.imageMarkerIcon}">
						</g:Image>
					</g:SimplePanel>
				</g:cell>
				<g:cell width="285px">
					<g:VerticalPanel styleName="{style.dualTextPanel}" >
						<g:Label ui:field="lbTitle" styleName="{style.lbTitle}"></g:Label>
						<g:Label ui:field="lbTypeAndDate" styleName="{style.lbTypeAndDate}"></g:Label>
					</g:VerticalPanel>
				</g:cell>
				
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.wideTopButton}" ui:field="tbRatingUp" title="Rating um 1 erhöhen">
					    <g:FlowPanel>
					    	<g:Image resource="{resources.go_up}" styleName="{style.rateButton}" ui:field="rate_up" />
					    	<g:Label ui:field="lbRatingUpCount" styleName="{style.lbRatingSmall}">?</g:Label>
					    </g:FlowPanel>
					</g:FocusPanel>
				</g:cell>
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.wideTopButton}" ui:field="tbRatingDown" title="Rating um 1 senken">
					    <g:FlowPanel>
					    	<g:Image resource="{resources.go_down}" styleName="{style.rateButton}" ui:field="rate_down" />
					    	<g:Label ui:field="lbRatingDownCount" styleName="{style.lbRatingSmall}">?</g:Label>
					    </g:FlowPanel>
					</g:FocusPanel>
				</g:cell>
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton}" ui:field="tbRating" title="Rating vergeben"><g:Label ui:field="lbRating" styleName="{style.lbRating}">?</g:Label></g:FocusPanel>
				</g:cell>
				
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbResolved}" ui:field="tbResolved" title="Als erledigt markieren"></g:FocusPanel>
				</g:cell>
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbEdit}" ui:field="tbEdit" title="Informationen bearbeiten"></g:FocusPanel>
				</g:cell>
				<!--  <g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbOpen}" ui:field="tbOpen" title="Popup öffnen"></g:FocusPanel>
				</g:cell>-->
				<g:cell height="100%" width="40px">
					<g:FocusPanel styleName="{style.topButton} {style.tbClose}" ui:field="tbClose" title="Popup schließen"></g:FocusPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell><!-- Tabknöpfe -->
			<g:HorizontalPanel styleName="{style.lowerBar}" width="100%" height="33px" >
				<g:cell width="25%"><g:Button styleName="{style.tabButton}" ui:field="tabButtonDescription">Allgemein</g:Button></g:cell>
				<g:cell width="1px" height="100%"><g:Label styleName="{style.tabDivider}">&nbsp;</g:Label></g:cell>
				<g:cell width="25%"><g:Button styleName="{style.tabButton}" ui:field="tabButtonPhotos">Fotos</g:Button></g:cell>
				<g:cell width="1px" height="100%"><g:Label styleName="{style.tabDivider}">&nbsp;</g:Label></g:cell>
				<g:cell width="25%"><g:Button styleName="{style.tabButton}" ui:field="tabButtonComments">Kommentare</g:Button></g:cell>
				<g:cell width="1px" height="100%"><g:Label styleName="{style.tabDivider}">&nbsp;</g:Label></g:cell>
				<g:cell width="25%" height="100%">
					<g:Label></g:Label>
				</g:cell> 
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell><!-- Haubtbereich mit Tabinhalten -->
			<g:DeckPanel ui:field="deckPanel" styleName="{style.mainArea}">
			    <g:HorizontalPanel ui:field="tabDescription" height="240px"> <!-- Description -->
			        <g:cell width="66%">
				        <g:VerticalPanel width="100%" height="100%">
				            <g:Label styleName="{style.lbBodyHeader}">Beschreibung</g:Label>
				            <g:cell height="100%">
								<g:ScrollPanel width="100%" height="205px" styleName="{style.subContent}">
									<g:HTML ui:field="description" styleName="{style.description_label}"></g:HTML>
								</g:ScrollPanel>
							</g:cell>
							<!-- 
							<g:Label styleName="{style.lbBodyHeader}">Antwort</g:Label>
				            <g:cell height="50%">
								<g:ScrollPanel width="100%" height="100%">
									<g:HTML ui:field="answer" styleName="{style.description_label}"><i>(Bisher keine Antwort)</i></g:HTML>
								</g:ScrollPanel>
							</g:cell>
							 -->
				        </g:VerticalPanel>
				    </g:cell>
				    <g:cell width="12px">
				    	<g:SimplePanel width="12px"></g:SimplePanel>
				    </g:cell>
				    <g:cell width="34%">
				      	<g:VerticalPanel width="100%" height="100%">
				      	    <g:HorizontalPanel styleName="{style.lbBodyHeader}">
				      	        <g:cell width="100%">
							    	<g:Label ui:field="lbPhotoMainHeader">Foto</g:Label>
							    </g:cell>
							    <g:Label ui:field="lbMorePhotos" styleName="{style.lbWhatsThis}"></g:Label>
							</g:HorizontalPanel>
				           
				            <g:cell height="48%">
								<g:VerticalPanel width="100%" height="100%" ui:field="pnPhotoMain">
									<g:HTML ui:field="lbNoPhotosMain" styleName="{style.description_label}"><i>(Bisher keine Fotos)</i></g:HTML>
								</g:VerticalPanel>
							</g:cell>
							<g:HorizontalPanel styleName="{style.lbBodyHeader}">
				      	        <g:cell width="100%">
							    	<g:Label>Relevanz</g:Label>
							    </g:cell>
							    <g:Label ui:field="lbWhatsThis" styleName="{style.lbWhatsThis}">(Was ist das?)</g:Label>
							</g:HorizontalPanel>
				            <g:cell height="45%">
								<g:AbsolutePanel width="100%" height="100%">
									<g:FocusPanel styleName="{style.btRelUp}" ui:field="tbRatingUp2" title="Rating um 1 erhöhen">
									    <g:FlowPanel>
									    	<g:Image resource="{resources.go_up}" styleName="{style.rateButton}" ui:field="rate_up2" />
									    	<g:Label ui:field="lbRatingUpCount2" styleName="{style.lbRatingSmall}">?</g:Label>
									    </g:FlowPanel>
									</g:FocusPanel>
									<g:FocusPanel styleName="{style.btRelDown}" ui:field="tbRatingDown2" title="Rating um 1 senken">
									    <g:FlowPanel>
									    	<g:Image resource="{resources.go_down}" styleName="{style.rateButton}" ui:field="rate_down2" />
									    	<g:Label ui:field="lbRatingDownCount2" styleName="{style.lbRatingSmall}">?</g:Label>
									    </g:FlowPanel>
									</g:FocusPanel>
									<g:Label ui:field="lbRating2" styleName="{style.lbRelShow}">?</g:Label>
								</g:AbsolutePanel>
							</g:cell>
				        </g:VerticalPanel>
				    </g:cell>
				</g:HorizontalPanel>
				<g:VerticalPanel width="100%"  height="240px"  ui:field="tabPhotos" >
		            <g:Label styleName="{style.lbBodyHeader}" ui:field="photosHeader">Fotos</g:Label>
		            <g:cell height="66%">
						<g:ScrollPanel width="100%" height="135px" styleName="{style.subContent}">
							<g:FlowPanel ui:field="picturesPanel">
							    <g:Label ui:field="lbNoPhotos">Bisher wurden keine Fotos zu diesem Eintrag hochgeladen.</g:Label>
							</g:FlowPanel>
						</g:ScrollPanel>
					</g:cell>   
					<g:Label styleName="{style.lbBodyHeader}">Eigenes Foto hochladen</g:Label>
		            <g:cell height="34%">
						<g:FormPanel ui:field="form" width="90%">
						    <g:HorizontalPanel>
								<g:FileUpload ui:field="fileupload"></g:FileUpload>
								<g:Button ui:field="uploadButton">Hochladen</g:Button>
							</g:HorizontalPanel>
						</g:FormPanel>
					</g:cell>
		        </g:VerticalPanel>
		        <g:VerticalPanel width="100%"  height="240px"  ui:field="tabComments" >
		            <g:Label styleName="{style.lbBodyHeader}" ui:field="commentsHeader">Kommentare</g:Label>
		            <g:cell height="66%">
						<g:ScrollPanel width="100%" height="135px" styleName="{style.subContent}" ui:field="spComments">
							<g:VerticalPanel ui:field="commentsPanel">
							    <g:Label ui:field="lbNoComments">Bisher wurden keine Kommentare zu diesem Eintrag geschrieben.</g:Label>
							</g:VerticalPanel>
						</g:ScrollPanel>
					</g:cell>   
					<g:Label styleName="{style.lbBodyHeader}">Eintrag kommentieren</g:Label>
		            <g:cell height="34%">
					    <g:HorizontalPanel width="100%">
					        <g:cell width="95%">
								<g:TextBox width="92%" ui:field="commentTextBox"></g:TextBox>
							</g:cell>
							<g:cell>
								<g:Button ui:field="commentButton">Kommentieren</g:Button>
							</g:cell>
						</g:HorizontalPanel>
					</g:cell>
		        </g:VerticalPanel>
			</g:DeckPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder>