<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.keyValuePair{
			white-space: nowrap;
			font-size: 100%;
			
			border-bottom: 1px solid #FFF;
			width: 98%;
			padding-bottom: 3px;
			margin-bottom: 8px;
		}
		
		.key{text-transform:uppercase;
			font-weight: bold;}
		.value{}
		
	</ui:style>
	<g:HTMLPanel ui:field="parent" width="100%">
		<g:VerticalPanel ui:field="verticalPanel">
		<g:HorizontalPanel width="100%" styleName="{style.keyValuePair}"><g:cell><g:Label ui:field="name" styleName="{style.key}"/></g:cell><g:cell horizontalAlignment="ALIGN_RIGHT"><g:SimplePanel ui:field="value_view" styleName="{style.value}"/></g:cell> </g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 