<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
		
		<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />
	
	<ui:style>
		
		.button {
				border-left: 1px solid #4C4C4C;
    			border-right: 1px solid #000000;
				cursor: pointer;
		}

		.footer{
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				border-top: 2px solid #4DADDE;
				background: #333;
				z-index: 5;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.footer}" width="100%" ui:field="footer">
	
		<g:cell width="52px" horizontalAlignment="ALIGN_RIGHT">
			<g:PushButton styleName="{style.button}"  ui:field="chart_button" width="50px" title="Karten-Statistik anzeigen">
   				<g:upFace image='{resources.chart}'/>
  				<g:upHoveringFace image='{resources.chart_hover}'/>
			</g:PushButton>
		</g:cell>
		
		<g:cell width="52px"  horizontalAlignment="ALIGN_RIGHT">
			<g:PushButton styleName="{style.button}" ui:field="list_button" width="50px" title="Karten-Objekte als Liste anzeigen">
   				<g:upFace image='{resources.list}'/>
  				<g:upHoveringFace image='{resources.list_hover}'/>
			</g:PushButton> 
		</g:cell>
		
		<g:cell width="52px" horizontalAlignment="ALIGN_LEFT">   
			<g:PushButton styleName="{style.button}" ui:field="preferences_button" width="50px"  title="Einstellungen">
   				<g:upFace image='{resources.preferences}'/>
  				<g:upHoveringFace image='{resources.preferences_hover}'/>
			</g:PushButton>
		</g:cell>  
		
		<g:cell horizontalAlignment="ALIGN_RIGHT">
	 		<g:Image url="logo_gmino.png"/>  
		</g:cell>
		
	</g:HorizontalPanel>
</ui:UiBinder> 