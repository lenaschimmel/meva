<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
		
		<ui:with field="resources" type="de.gmino.issuemap.client.resources.ImageResources" />
	
	<ui:style>
		
		.button {
				text-align:center;
				font-variant:normal;
				color: #4DADDE;
				border:0px;
				background: #FFF;
				margin-top: 10px;
				background: #333;
		}

		.footer{
				font-size: 90%;
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				border-top: 2px solid #4DADDE;
				background: #333;
				z-index: 5;
				min-height: 15px;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.footer}" width="100%"  ui:field="footer">
		<g:cell width="30px;">
			<g:PushButton styleName="{style.button}"  ui:field="chart_button">
   				<g:upFace resources='{resources.chart}'/>
  				<g:downHoveringFace resources='{resources.chart_hover}'/>
			</g:PushButton>
		</g:cell>
		
		<g:cell width="30px;">
			<g:PushButton styleName="{style.button}"  ui:field="list_button">
	<!--	    	<img id='list_icon' src='icons/list_hover.png'></img>-->
			</g:PushButton> 
		</g:cell>
		
		<g:cell width="30px;">   
			<g:PushButton styleName="{style.button}"  ui:field="preferences_button">
		<!--   	 <img id='preferences_icon' src='icons/preferences_hover.png'></img>-->
			</g:PushButton>
		</g:cell>  
		
		<g:cell horizontalAlignment="ALIGN_RIGHT">
	 	<g:Image url="logo_gmino.png"/>  
		</g:cell>
		
	</g:HorizontalPanel>
</ui:UiBinder> 